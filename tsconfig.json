{
  "compilerOptions": {
     /* Language and Environment */
     "jsx": "react",
      
     /* Emit */
      "sourceMap": true,
      "outDir": "./dist",
      "removeComments": true,

      /* Modules */
      "baseUrl": "./",
  
     /* Interop Constraints */
     "esModuleInterop": true,
     "forceConsistentCasingInFileNames": true,
  
     /* Type Checking */
     "strict": true,
     "skipLibCheck": true,

     "target": "es5",
     "lib": ["es5", "dom"],
     "types": ["cypress", "cypress-xpath", "node", "./cypress/support"]
  },
  "exclude": [
      "node_modules"
  ],
  "include": [
      "**/*.ts"
  ]
}
  